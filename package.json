{
  "name": "cloudstore",
  "version": "1.0.0",
  "description": "Kabeer CloudStore server",
  "author": "Kabeer's Network Authors",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "source/*",
    "source/backends/*",
    "source/packages/*"
  ],
  "scripts": {
    "backend:start": "bun --cwd source/backends/default dev",
    "client:build": "bun --cwd source/client build:esm",
    "dev": "bun run backend:start",
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "lint": "bun run --filter '*' lint"
  },
  "devDependencies": {
    "bun-types": "latest",
    "ttypescript": "^1.5.15",
    "typescript": "^5.9.2"
  }
}
